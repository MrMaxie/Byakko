{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": false,
        "strictNullChecks": true,
        "module": "CommonJS",
        "target": "ES2017",
        "jsx": "react",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "noImplicitUseStrict": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noImplicitReturns": false,
        "paths": {
            "~/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}